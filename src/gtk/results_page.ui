<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>

  <template class="ResultsPage" parent="AdwNavigationPage">
    <property name="title" translatable="yes">Scanning in progress...</property>

    <child>
      <object class="AdwToolbarView">
        <child type="top">
          <object class="AdwHeaderBar">
            <child type="title">
              <object class="AdwWindowTitle" id="results_title">
                <property name="title" translatable="yes">Scan Results</property>
                <property name="subtitle" translatable="yes">Devices found on your network:</property>
              </object>
            </child>

            <child type="start">
              <object class="GtkButton" id="stop_button">
                <property name="label" translatable="yes">Stop Scanning</property>
                <property name="tooltip-text" translatable="yes">Stop the current network scan</property>
                <property name="visible">false</property>
                <signal name="clicked" handler="on_stop_clicked"/>
                <style>
                  <class name="destructive-action"/>
                </style>
              </object>
            </child>

            <child type="end">
              <object class="GtkBox">
                <property name="spacing">6</property>

                <child>
                  <object class="GtkButton" id="export_button">
                    <property name="icon-name">document-save-symbolic</property>
                    <property name="tooltip-text" translatable="yes">Export to CSV</property>
                    <signal name="clicked" handler="on_export_clicked"/>
                  </object>
                </child>

                <child>
                  <object class="GtkButton" id="view_toggle">
                    <property name="icon-name">view-list-symbolic</property>
                    <property name="tooltip-text" translatable="yes">Switch to List View</property>
                    <signal name="clicked" handler="on_view_toggle_clicked"/>
                  </object>
                </child>

                <child>
                  <object class="GtkButton" id="rescan_button">
                    <property name="label" translatable="yes">Scan Again</property>
                    <signal name="clicked" handler="on_rescan_clicked"/>
                    <style>
                      <class name="suggested-action"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>

        <child>
          <object class="GtkStack" id="results_stack">
            <property name="transition-type">crossfade</property>
            <property name="transition-duration">200</property>

            <child>
              <object class="GtkStackPage">
                <property name="name">loading</property>
                <property name="child">
                  <object class="AdwStatusPage">
                    <property name="title" translatable="yes">Scanning Network</property>
                    <property name="description" translatable="yes">Discovering devices on your network... (this may take a while!)</property>
                    <property name="icon-name">network-wireless-acquiring-symbolic</property>

                    <child>
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="spacing">12</property>
                        <property name="halign">center</property>

                        <child>
                          <object class="AdwSpinner" id="spinner">
                            <property name="width-request">48</property>
                            <property name="height-request">48</property>
                            <style>
                              <class name="large"/>
                            </style>
                          </object>
                        </child>

                        <child>
                          <object class="GtkLabel" id="progress_label">
                            <property name="label" translatable="yes">Preparing scan...</property>
                            <style>
                              <class name="dim-label"/>
                            </style>
                          </object>
                        </child>

                        <child>
                          <object class="GtkLabel" id="timer_label">
                            <property name="label" translatable="yes">Time Elapsed: 00:00</property>
                            <style>
                              <class name="dim-label"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </child>

            <child>
              <object class="GtkStackPage">
                <property name="name">devices</property>
                <property name="child">
                  <object class="GtkScrolledWindow">
                    <property name="hscrollbar-policy">never</property>
                    <property name="vscrollbar-policy">automatic</property>
                    <property name="vexpand">true</property>

                    <child>
                      <object class="GtkFlowBox" id="flow_box">
                        <property name="valign">start</property>
                        <property name="max-children-per-line">3</property>
                        <property name="min-children-per-line">1</property>
                        <property name="row-spacing">12</property>
                        <property name="column-spacing">12</property>
                        <property name="margin-top">24</property>
                        <property name="margin-bottom">24</property>
                        <property name="margin-start">24</property>
                        <property name="margin-end">24</property>
                        <property name="selection-mode">none</property>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </child>

            <child>
              <object class="GtkStackPage">
                <property name="name">list</property>
                <property name="child">
                  <object class="GtkScrolledWindow" id="list_view">
                    <property name="hscrollbar-policy">automatic</property>
                    <property name="vscrollbar-policy">automatic</property>
                    <property name="vexpand">true</property>
                  </object>
                </property>
              </object>
            </child>

            <child>
              <object class="GtkStackPage">
                <property name="name">empty</property>
                <property name="child">
                  <object class="AdwStatusPage" id="empty_page">
                    <property name="title" translatable="yes">No Devices Found</property>
                    <property name="description" translatable="yes">No devices were found in the specified range!</property>
                    <property name="icon-name">network-wireless-offline-symbolic</property>
                  </object>
                </property>
              </object>
            </child>

            <child>
              <object class="GtkStackPage">
                <property name="name">error</property>
                <property name="child">
                  <object class="AdwStatusPage" id="error_page">
                    <property name="title" translatable="yes">Scan Error</property>
                    <property name="description" translatable="yes">An error occurred while scanning the network!</property>
                    <property name="icon-name">dialog-error-symbolic</property>
                  </object>
                </property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
